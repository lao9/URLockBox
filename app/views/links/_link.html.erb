<div class="link well <%= "read" if link.read %>" id=<%= "link-#{link.id}" %>>
  <%= render partial: 'links/spicy', locals: {link: link} if link.is_a?(HotLink) %>
  <h4>Title: <%= link.title %></h4>
  <p class="url">URL: <%= link_to "#{link.url}", link.url %></p>
  <p class="read-status">Read?: <%= link.read.to_s %></p>
  <%= render partial: 'links/unread_button' if link.read %>
  <%= render partial: 'links/read_button' unless link.read %>
  <%= button_to "Edit", edit_link_path(link.id), {method: :get, class:"btn btn-primary"} %>
</div>
